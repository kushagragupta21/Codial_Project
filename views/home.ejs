<link rel="stylesheet" href="/css/home.css">
        <h1> 
            Codial / <%= title %>
         </h1>
       
<div id="home-container">
    <section id="feed-posts">


        <h4>Posts</h4>
       
        
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="40" rows="5" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
            

            

    

    <div id="view-posts">
        <h4>Yours posts</h4>
        <ul>
        <% for(post of posts) { %>
        <li> <h4><%= post.content %> </h4>
            <br> <small> <%=post.user.name%> </small></li>
            <% } %>
        </ul>
    </div>
    </section>
</div>